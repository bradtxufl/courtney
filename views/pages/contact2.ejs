<!-- views/pages/contact.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
    <link rel='stylesheet' href="./css/contact.css">
</head>
<body class="container-fluid">

  <div class='photo container-fluid'>
    <header class='container'>
      <% include ../partials/header %>

    </header>

    <div class='container' id='splash'>

      <form id='mainContact' method='post' action='/contact'>
        <h1 class='onsubmit'>Thank You for your Message!  I'll be in touch soon!</h1>
        <div class="form-group">
          <label for="exampleInputName">Name</label>
          <input name='name' type="string" class="form-control" id="exampleInputName" aria-describedby="nameHelp" placeholder="What is your name?">
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Email address</label>
          <input name='email' type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
          <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Phone Number</label>
          <input name='phone' type="string" class="form-control" id="exampleInputPhone" aria-describedby="PhoneHelp" placeholder="Enter phone number">
        </div>
        <div class="form-group">
          <label for="exampleFormControlTextarea1">How can I help?</label>
          <textarea name='body' class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
        </div>
        <div class="form-group form-check">
          <input name='newsletter' type="checkbox" class="form-check-input" id="exampleCheck1">
          <label class="form-check-label" for="exampleCheck1">I want to receive Courtney's newsletter!</label>
        </div>
        <button type="submit" class="btn btn-danger">Submit</button>
      </form>
  </div>

  </div>

<footer>
    <% include ../partials/footer %>
</footer>
<script src="./js/about.js"></script>
</body>
</html>
